# Aliases
alias md='mkdir -p'
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias javar='java -jar'
alias ping=' ping -c 5'
alias 'cd..'='cd ..'
alias shr='source ~/.zshrc'
alias she='vim ~/.zshrc'
alias ls='ls --color=auto'
alias :3='echo'
alias gch='git checkout'
alias gchn='git checkout -b'
alias gc='git commit'
alias gpm='git commit -pm'
alias ga='git add'
alias gaa='git add .'
alias gs='git status'
alias gi='git init .'
alias gps='git push'
alias gpl='git pull'
alias gd='git diff'
alias yolo='git commit -m "$(curl -s whatthecommit.com/index.txt)"'
alias bye='shutdown now'
alias fkbye='halt'
alias cya='reboot'
alias please='sudo'
alias dn='date +"%Y%m%d %H%M %Z"'
if [[ $(uname) == "Darwin" ]]; then
	alias emacs='open -a /Applications/Emacs.app "$@"'
fi
